#!/usr/bin/env ruby

require 'dir_manifest'


if ARGV[0] == 'digest'
  DirManifest::Digester.new(ARGV[1]).write_digest
elsif ARGV[0] == 'verify'
  a = DirManifest::Verifier.new(ARGV[1])
  puts a.valid?
  puts a.errors.inspect
else
  raise ArgumentError.new('Option not understood')
end

puts 'done!'
